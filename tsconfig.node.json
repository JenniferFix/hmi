{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/db/**/*",
    "src/*",
    "drizzle.config"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "baseUrl": ".",
    "paths": {
      "$/*": [ "*" ],
      "@/*": [ "src/*" ],
      "@db/*": [ "src/db/*" ]
    }
  }
}
